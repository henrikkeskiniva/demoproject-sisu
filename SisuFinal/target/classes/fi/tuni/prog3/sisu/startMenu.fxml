<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="start" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="fi.tuni.prog3.sisu.StartMenuController">
    <VBox fx:id="menuContent" spacing="35.0">
        <Label fx:id="menuHeader" text="Tervetuloa" ></Label>
        <HBox alignment="CENTER" spacing="30.0" >
            <Button fx:id="newUserButton" text="Uusi käyttäjä" onAction="#continueToUserMenu"/>
            <Button fx:id="loadUserButton" text="Lataa käyttäjä" onAction="#loadUserAndContinueToMenu"/>
        </HBox>
        <Label fx:id="helpLabel"></Label>
    </VBox>
</VBox>
